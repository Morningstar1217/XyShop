      <template is="featuredComList" data="{{item,consolePlat,index:index}}"></template>
    </block>
    <view class="noComs" wx:if="{{featuredComList.length==0}}">暂时没有收藏哦~</view>
  </view>
  <!-- 商品编辑 -->
  <view class="consolePlatform" wx:if="{{consolePlat&&featuredComList.length!=0}}">
    <view class="selectedAll" bind:tap="selectAll">全选</view>
    <view class="delComs" bind:tap="deleteList">删除</view>
  </view>
  <!-- 底部导航栏 -->
  <view class="tabbar">
    <navigator class="couponBar" url="/pages/index/index">
      <image src="/images/coupon.png" />
    </navigator>
    <view class="collection">
      <image class="faved" src="/images/faved.png" />
      我的收藏
    </view>
  </view>
  <!-- 大遮罩 -->
  <view class="bigWrap" wx:if="{{sureBuy}}">
    <view class="successMsg">
      <view class="successTItle">复制成功</view>
      <view class="successContent">已复制淘口令，打开手机淘宝领券下单即可\n领券下单成功后记得回大白之家[登记哦]~</view>
      <view class="successTItle" bind:tap="closeWrap">确定</view>
