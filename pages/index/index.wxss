/* pages/index/index.wxss */
@import "../template/template.wxss";
/* **********************顶部区域 ***********************/
.header {
  width: 100%;
  height: 100rpx;
  background-image: linear-gradient(to right, #ea7e64, #d34353);
  position: relative;
}

.getCoupon {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  margin: 20rpx 0 0 40rpx;
}

.couponImg {
  width: 60rpx;
  height: 60rpx;
}

.search {
  position: absolute;
  width: 90%;
  height: 58rpx;
  top: 50%;
  margin-top: -28rpx;
  box-sizing: border-box;
  display: inline-block;
  background: #fff;
  border-radius: 30rpx;
  margin-left: 5%;
  font-size: 30rpx;
  background-image: url("http://pbn1t9k4c.bkt.clouddn.com/search.png");
  background-size: 40rpx;
  background-origin: content-box;
  background-repeat: no-repeat;
  background-position: -50rpx;
  text-align: left;
  padding-left: 80rpx;
}

/*********************** 轮播图 ***********************/
.banner {
  width: 100%;
  height: 294rpx;
}

swiper-item > image {
  width: 100%;
  height: 294rpx;
}

/* ********************** 商品分类***********************/
.section {
  margin-top: 10rpx;
  background: #fff;
  width: 100%;
}

.menuWrap {
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  z-index: 10;
}

.menuList {
  position: absolute;
  top: 50%;
  margin-top: -50rpx;
  display: inline-block;
  width: 90%;
  height: 100rpx;
  box-sizing: border-box;
  line-height: 100rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  background: #fff;
  overflow: hidden;
  white-space: nowrap;
  box-shadow: none;
}

.menuListOpen {
  display: inline-block;
  box-sizing: border-box;
  line-height: 100rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 28rpx;
  background: #fff;
  width: 100%;
  height: auto;
  overflow: auto;
  white-space: normal;
  box-shadow: 0rpx 2rpx 2rpx rgba(0, 0, 0, 0.2);
}

.menuDetail {
  display: inline-block;
  height: 100rpx;
  box-sizing: border-box;
  text-align: center;
  margin-right: 30rpx;
}

.selected {
  border-bottom: 4rpx solid #d34353;
}

.showAll {
  position: absolute;
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  top: 25rpx;
  right: 20rpx;
  padding: 10rpx;
}

.showAlled {
  background-image: url("http://pbn1t9k4c.bkt.clouddn.com/alled.png");
}

/* *************************新手教程区***************************** */
.studyTutorial {
  background: transparent;
}

.studyTutorialImg {
  width: 94%;
  height: 110rpx;
  vertical-align: middle;
  margin-bottom: 20rpx;
}

/* **********************全部分类 展示区 ***********************/
.showWrap {
  padding: 20rpx 18rpx;
  overflow: hidden;
}

.showLeft,
.showRight {
  float: left;
  width: 345rpx;
}

.showRight {
  margin-left: 20rpx;
}

.showLeft image,
.showRight image {
  width: 345rpx;
  height: 284rpx;
  vertical-align: top;
}

.showRight image {
  height: 132rpx;
}

.showRightImg2 {
  margin-top: 22rpx;
}

/* *****************************非全部分类**展示区************************* */

.littleMenuWrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}

.littleMenu {
  width: 120rpx;
  height: 143rpx;
  overflow: hidden;
  margin-left: 5rpx;
}

.littleImg {
  width: 90rpx;
  height: 90rpx;
}

.littleName {
  font-size: 28rpx;
  text-align: center;
}
/* 条件筛选 */

.filter {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 100%;
  height: 80rpx;
  line-height: 58rpx;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #f2f2f2;
}

.filterList {
  position: relative;
  width: 25%;
  text-align: center;
  font-size: 30rpx;
}

.filterListed {
  color: #ff4e66;
}

.price_l,
.price_h {
  position: absolute;
  right: 28rpx;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
}

.price_l {
  top: 12rpx;
  border-top: none;
  border-bottom: 15rpx solid #707070;
}

.price_h {
  top: 32rpx;
  border-bottom: none;
  border-top: 15rpx solid #707070;
}

.price_l_ed {
  border-bottom-color: #d34353;
}
.price_h_ed {
  border-top-color: #d34353;
}
